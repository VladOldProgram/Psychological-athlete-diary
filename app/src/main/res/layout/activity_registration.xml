<?xml version="1.0" encoding="utf-8"?>
<!-- Файл настроек элементов интерфейса для страницы приложения RegistrationActivity -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/constraintLayoutActivityRegistration"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewApplicationIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/application_icon_content_description"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textViewRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/text_view_registration_text"
            android:textColor="#38373B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_person_name_hint"
            android:inputType="textPersonName"
            android:outlineProvider="background"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <EditText
            android:id="@+id/editTextPersonSurname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_person_surname_hint"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <EditText
            android:id="@+id/editTextPersonBirthDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_person_birth_date_hint"
            android:inputType="date"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_email_hint"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_password_hint"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <EditText
            android:id="@+id/editTextRepeatPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_repeat_password_hint"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#565050" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRole"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:text="@string/text_view_role_text"
                android:textColor="#F85E6F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonSportsman"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:buttonTint="#38373B"
                    android:text="@string/radio_button_sportsman_text"
                    android:textColor="#38373B"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/radioButtonPsychologist"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:buttonTint="#38373B"
                    android:text="@string/radio_button_psychologist_text"
                    android:textColor="#38373B"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/buttonRegistration"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#F85E6F"
            android:gravity="center|center_horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/button_registration_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewToAuthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:layout_weight="1"
                android:paddingVertical="13dp"
                android:text="@string/text_view_to_auth_label"
                android:textColor="#827B7C"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonAuthorization"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:gravity="center|center_horizontal"
                android:text="@string/button_authorization_text"
                android:textAllCaps="false"
                android:textColor="#F75E6F"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>