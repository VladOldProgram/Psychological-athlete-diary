<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/constraintLayoutActivityAuthorization">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewSportsman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/application_icon_content_description"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:layout_marginVertical="10dp"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="false"
            android:text="@string/text_view_input_text"
            android:textColor="#38373B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_login"
            android:inputType="textPersonName"
            android:textColorHint="#5E5757" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:autofillHints="no"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/edit_text_password_hint"
            android:inputType="textPassword"
            android:textColorHint="#5E5757" />

        <Button
            android:id="@+id/buttonInput"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#F85E6F"
            android:gravity="center|center_horizontal"
            android:text="@string/button_input_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNotAccountLabel"
                android:layout_width="152dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:paddingVertical="13dp"
                android:text="@string/text_view_not_account_label"
                android:textColor="#827B7C"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/buttonRegistration"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="211dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:drawableTint="#00FFFFFF"
                android:foregroundTint="#00FFFFFF"
                android:gravity="center|center_horizontal|center_vertical"
                android:shadowColor="#00FFFFFF"
                android:text="@string/button_registration"
                android:textAllCaps="false"
                android:textColor="#F75E6F"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>