<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/text_view_delete_sportsman"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/buttonCancelDelete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:background="@color/my_light_pink"
            android:text="@string/button_cancel_delete"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,TextContrastCheck,VisualLintButtonSize"/>

        <Button
            android:id="@+id/buttonConfirmDelete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:background="@color/my_light_pink"
            android:text="@string/button_confirm_delete"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,TextContrastCheck,VisualLintButtonSize"/>

    </LinearLayout>
</LinearLayout>